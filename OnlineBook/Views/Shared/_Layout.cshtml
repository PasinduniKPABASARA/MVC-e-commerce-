<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        .na {
            text-decoration: none;
            color: white;
        }
    </style>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href=""> Online Shopping  </a>
            </div>
            <ul class="nav navbar-nav">
                <li>
                    @if (Session["adminID"] != null)
                    {
                        @Html.ActionLink("Category Add", "Category", "Admin", null, new { @class = "ht" })}
                </li>
                <li>
                    @if (Session["adminID"] != null)
                    {
                        @Html.ActionLink("Category View", "ViewCategory", "Admin", null, new { @class = "ht" })}
                </li>
                    <li>
                        @if (Session["adminID"] != null)
                        {


                            @Html.ActionLink("Post An Ad", "CreateAd", "Admin", null, new { @class = "ht" })}

                    </li>
                    <li>
                        @if (Session["adminID"] != null)
                        {


                            @Html.ActionLink("Customer", "Customer", "Admin", null, new { @class = "ht" })}

                    </li>
                    <li>
                        @if (Session["adminID"] != null)
                        {


                            @Html.ActionLink("Order", "Order", "Admin", null, new { @class = "ht" })}

                    </li>

                    <li style="color:whitesmoke;margin-top:20px;margin-left:5px"> @Session["adminName"]</li>
                    }

                    <li style="float:right">
                        @if (Session["adminID"] == null)
                        {



                            @Html.ActionLink("Sign In", "login", "Admin", null, new { @class = "ht", })}
                    </li>
                    <li style="float:right">
                        @if (Session["userID"] != null)
                        {
                            @Html.ActionLink("Sign Out", "SignOut", "Admin", null, new { @class = "ht" })}

                    <li>
             </ul>

        </div>
    </nav>


        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
