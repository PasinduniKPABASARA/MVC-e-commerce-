@model OnlineBook.Models.Book
@{
    ViewBag.Title = "AddToCart";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



@using (Html.BeginForm())
{



<div class="row">
    <div class="col-lg-12">
        <div class="text-center">
            <h1>@Model.bookName <small>AD-ID:@Model.bookId</small></h1>

        </div>
    </div>
   
</div>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            <img src="@Url.Content(@Model.bookImage)" style="width: 250PX; height: 225PX; float: right" />
        </div>

        <div class="col-lg-6 col-md-6">

            <div>
                <h5>Description: </h5>
                <p>@Model.bookDescription</p>
            </div>



            <h5>Price: @Model.bookPrice </h5>
            <h5>Name:@Model.bookName </h5>
            <input type="number" name="qty" value="0" id="qty" min="1" max="10" />
            <input type="submit" name="submit" class="btn btn-danger" id="submit" />
        </div>







    </div>
}



