
@model OnlineBook.Models.adViewModel


@{ ViewBag.Title = "ViewAdds";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<style>
    td {
        padding: 20px;
    }
</style>

<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/img/ecommerce-2140603_960_720.jpg" class="img img-responsive" style="width:100%" />
    </div>
</div>

<div class="col-lg-8 col-md-8">

    <div>
        <h1>@Model.bookName <small>AD-ID:@Model.bookId</small></h1>
    </div>

    <img src="@Url.Content(@Model.bookImage)" style="width:500PX; height:450PX" />

    <div>
        <h1>Description: </h1>
        <p>@Model.bookDescription</p>
    </div>

    <table>

        <tr> <td>Price: </td> <td>@Model.bookPrice </td> </tr>
        <tr> <td>Category: </td> <td>@Model.categoryName </td> </tr>



        <tr>
            <td colspan="2">
                @Html.BeginForm("Delete", "Admin"){ 
                    @Html.ActionLink("Close Ad", "Delete", new { id = Model.bookId });
                }
            </td>
        </tr>

    </table>



</div>




<div class="col-lg-2 col-md-2">
    <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />
</div>

